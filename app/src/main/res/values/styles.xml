<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/royalBlue</item>
        <item name="colorPrimaryDark">@color/royalBlueDark</item>
        <item name="colorPrimaryVariant">@color/royalBlueLight</item>
        <item name="colorSecondary">@color/deepYellow</item>
        <item name="colorSecondaryVariant">@color/deepYellowLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/deepYellowDark</item>
        <item name="colorSurface">@color/royalBlue</item>
        <item name="colorSecondaryContainer">@color/deepYellowLight</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/royalBlue</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>