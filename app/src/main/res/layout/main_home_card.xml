<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/default_margin"
    style="@style/Widget.Material3.CardView.Filled"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/default_card_corner_radius"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    android:id="@+id/card_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="@dimen/default_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_home_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:textAppearance="@style/TextAppearance.NewsAroundYou.LabelSmall"
                tools:text="Headlines" />

            <TextView
                android:id="@+id/tv_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                tools:text="DBS optimistic on KIT after strategic review"
                android:textAppearance="@style/TextAppearance.NewsAroundYou.TitleMedium"/>

            <TextView
                android:id="@+id/tv_home_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                tools:text="Channel News Asia"
                android:textAppearance="@style/TextAppearance.NewsAroundYou.LabelSmall"/>

            <TextView
                android:id="@+id/tv_home_published_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                tools:text="14 hours ago"
                android:textAppearance="@style/TextAppearance.NewsAroundYou.LabelSmall"
                android:fontFamily="@font/indie_flower"
                android:layout_gravity="bottom"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="@dimen/default_margin"
                android:orientation="vertical"
                android:gravity="end">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="@dimen/default_card_corner_radius">
                <ImageView
                    android:id="@+id/iv_home_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:background="@drawable/icon" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="bottom|end"
                android:layout_marginTop="@dimen/default_margin">

                <Button
                    android:id="@+id/b_home_share"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_share_24"/>

                <Button
                    android:id="@+id/b_home_bookmark"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_outline_bookmark_border_24"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>